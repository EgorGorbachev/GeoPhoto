<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="reg_auth_screen_title">
        <item name="fontFamily">@font/bold</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">@dimen/auth_reg_screen_title_size</item>
        <item name="android:layout_marginTop">@dimen/auth_reg_screen_title_margin_top</item>
    </style>

    <style name="reg_auth_screen_text_input">
        <item name="android:layout_marginStart">@dimen/auth_password_input_margin_start</item>
        <item name="android:layout_marginTop">@dimen/auth_password_input_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/auth_password_input_margin_end</item>
        <item name="android:background">@drawable/edit_text_border</item>
    </style>

    <style name="reg_auth_main_button">
        <item name="android:layout_marginStart">@dimen/log_res_button_margin_start</item>
        <item name="android:layout_marginTop">@dimen/log_res_button_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/log_res_button_margin_end</item>
        <item name="android:paddingTop">@dimen/log_res_button_padding_top</item>
        <item name="android:paddingBottom">@dimen/log_res_button_padding_bottom</item>
        <item name="android:backgroundTint">@color/light_green</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">@dimen/log_res_button_text_size</item>
    </style>

    <style name="photoDetailsButtons">
        <item name="android:layout_marginTop">@dimen/photo_details_show_on_map_button_margin_top</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/photo_details_show_on_map_button_size</item>
    </style>
</resources>